@model IEnumerable<DataModelsFramework.Song>

@{
    ViewBag.Title = "index";
}

<h2>Songs</h2>

<p>
    @Html.ActionLink("Maak nieuw", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Song naam
        </th>
        <th>
            Artiesten
        </th>
        <th></th>
    </tr>

    @foreach (var song in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => song.SongName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => song.ArtistsToString)
            </td>
            <td>
                @Html.ActionLink("Bewerk", "Edit", new { id = song.SongId }) |
                @Html.ActionLink("Details", "Details", new { id = song.SongId }) |
                @Html.ActionLink("Verwijder", "Delete", new { id = song.SongId })
            </td>
        </tr>
    }

</table>
