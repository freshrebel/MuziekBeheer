@model IEnumerable<DataModelsFramework.Album>

@{
    ViewBag.Title = "Albums";
}

<h2>Albums</h2>

<p>
    @Html.ActionLink("Maak nieuw", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Naam")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AlbumName)
        </td>
        <td>
            @Html.ActionLink("Bewerk", "Edit", new { id=item.AlbumId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AlbumId }) |
            @Html.ActionLink("Verwijder", "Delete", new { id=item.AlbumId })
        </td>
    </tr>
}

</table>
