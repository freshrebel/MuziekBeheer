@model DataModelsFramework.Album

@{
    ViewBag.Title = "Detail";
}

<div>
    <h4>@Html.DisplayFor(model => model.AlbumName)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AlbumReleaseDate)
        </dt>

        <dd>
            @(Model.AlbumReleaseDate?.ToString("dd/MM/yyyy"))
        </dd>

    </dl>
</div>
<div>
    <h5><u><b>Songs</b></u></h5>
    @foreach (var song in Model.SongAlbums)
    {
        @song.AlbumSequenceNumber.ToString() <text>&nbsp;</text>
        @song.Song.SongName.ToString()
        <br />
    }
    <br />
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.AlbumId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
