@model DataModelsFramework.Album

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Bent u zeker dat u dit album wilt verwijderen?</h3>
<div>
    <h4>Album</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Naam")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlbumName)
        </dd>

        <dt>
            @Html.DisplayName("Release datum")
        </dt>

        <dd>
            @(Model.AlbumReleaseDate?.ToString("dd/MM/yyyy"))
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Terug naar de lijst", "Index")
        </div>
    }
</div>
