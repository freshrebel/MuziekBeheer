@model IEnumerable<DataModelsFramework.Genre>

@{
    ViewBag.Title = "Index";
}

<h2>Genres</h2>

<p>
    @Html.ActionLink("Maak nieuw", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Naam")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GenreName)
        </td>
        <td>
            @Html.ActionLink("Bewerk", "Edit", new { id=item.GenreId }) |
            @Html.ActionLink("Verwijder", "Delete", new { id=item.GenreId })
        </td>
    </tr>
}

</table>
